<body>


  <div class="container">
    <h1>Book your trip,<br /> the right way.</h1>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img src="https://bit.ly/2BuT73B" alt="Yellowstone" style="width:100%;">
          <div class="carousel-caption">
            <h3>Yellowstone National Park</h3>
          </div>
        </div>

        <div class="item">
          <img src="https://bit.ly/2TNoHAH" alt="San Francisco" style="width:100%;">
          <div class="carousel-caption">
            <h3>San Francisco</h3>
          </div>
        </div>

        <div class="item">
          <img src="https://bit.ly/2SgMlEr" alt="Grand Canyon" style="width:100%;">
          <div class="carousel-caption">
            <h3>Grand Canyon</h3>
          </div>
        </div>

      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>


</body>
