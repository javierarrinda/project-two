<center>
<div class="loginAndSignup">

  <h1>Login</h1>

  <form action="/login" method="post">

      <label>Email:</label>
      <input type="text" name="username" required>

      <label>Password:</label>
      <input type="password" name="password">

      <button>Submit</button>

  </form>
</div>
</center>
{{#if errorMessage}}
<div>{{errorMessage}}</div>
{{/if}}
